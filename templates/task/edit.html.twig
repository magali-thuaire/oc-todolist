{% extends 'base.html.twig' %}

{% block body %}
    <p class="text-muted pull-right">Crée le {{ task.createdAt|date('d/m/Y') }} par
        {% if task.owner is not null %}
            {{ task.owner.username }}
        {% else %}
            {{ constant('App\\Entity\\Task::ANONYMOUS_TASK') }}
        {% endif %}
    </p>
    <div class="row">
        {{ form_start(form, {'action' : path('task_edit', { 'id' : task.id })}) }}
            {{ form_widget(form) }}

            <button type="submit" class="btn btn-success pull-right">Modifier</button>
        {{ form_end(form) }}
        <a href="{{ path('task_list') }}" class="btn btn-primary">Retour à la liste des tâches</a>
    </div>

{% endblock %}
